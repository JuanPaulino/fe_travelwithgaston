---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import BookingComponent from '../components/Booking.jsx';
import StoreDebuggerWrapper from '../components/StoreDebuggerWrapper.jsx';
import AuthGuard from '../components/AuthGuard';

const title = 'Hotel Booking';
---

<Layout title={title}>
	<Header />
	
	<!-- Contenido principal -->
	<main class="min-h-screen py-8">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<AuthGuard client:load redirectTo="/" requireAuth={true} fallback={null}>
				<BookingComponent client:load />
			</AuthGuard>
		</div>
	</main>

	<StoreDebuggerWrapper client:load />
</Layout>
