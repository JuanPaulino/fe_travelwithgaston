---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ResetPasswordPage from '../components/auth/ResetPasswordPage.jsx';
---

<Layout title="Reset Password - TravelWithGaston">
  <Header />
  <main class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <div class="text-center">
        <img class="mx-auto h-12 w-auto" src="/logo.png" alt="TravelWithGaston" />
        <h2 class="mt-6 text-3xl font-bold text-gray-900">Reset your password</h2>
        <p class="mt-2 text-sm text-gray-600">
          Enter your new password below to complete the reset process.
        </p>
      </div>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <ResetPasswordPage client:load />
      </div>
    </div>
  </main>
</Layout>