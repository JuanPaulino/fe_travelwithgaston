---
// Footer.astro - Componente de pie de página
import Heading from './common/Heading.jsx';
import Text from './common/Text.jsx';
import { getFooterNavigation } from '../lib/directus.js';

// Obtener datos de navegación del footer
const { data: footerNavigationData, error } = await getFooterNavigation();
---

<footer class="bg-black text-white">
  <!-- Sección superior con columnas de enlaces -->
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      {footerNavigationData && footerNavigationData.map((section: any) => (
        <div class="space-y-4">
          <Heading level={5} className="text-white font-semibold">{section.title}</Heading>
          <ul class="space-y-2">
            {section.items && section.items.map((item: any) => (
              <li>
                <a 
                  href={item.url || (item.page ? `${item.page.permalink || item.title.toLowerCase().replace(/\s+/g, '-')}` : `${item.title.toLowerCase().replace(/\s+/g, '-')}`)} 
                  class="font-body text-base text-gray-300 hover:text-white transition-colors"
                >
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>

  <!-- Sección inferior con branding y enlaces legales -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-6 py-8">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
        
        <!-- Lado izquierdo: Branding -->
        <div class="space-y-1">
          <img src="/api/assets/logo_x2.png" alt="Travel with Gastón" class="w-50 md:w-auto md:h-5 lg:h-8">
          <Text size="sm" className="text-gray-400">Powered by Little Emperors</Text>
        </div>

        <!-- Lado derecho: Enlaces legales -->
        <div class="flex space-x-6">
          
        </div>

      </div>
    </div>
  </div>
</footer>
