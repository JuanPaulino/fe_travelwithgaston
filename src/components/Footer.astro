---
// Footer.astro - Componente de pie de página
import Heading from './common/Heading.jsx';
import Text from './common/Text.jsx';
import { getNavigationData } from '../lib/directus.js';

// Obtener datos de navegación
const { data: navigationData, error } = await getNavigationData();
const footerNavigation = navigationData?.find(nav => nav.id === 'footer')?.items || [];
---

<footer class="bg-black text-white">
  <!-- Sección superior con columnas de enlaces -->
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      
      {footerNavigation.map((item) => (
        <div class="space-y-4">
          <Heading level={5} className="text-white font-semibold">{item.title}</Heading>
          <ul class="space-y-2">
            {item.children && item.children.length > 0 ? (
              item.children.map((child) => (
                <li>
                  <a 
                    href={child.url || `/${child.title.toLowerCase().replace(/\s+/g, '-')}`} 
                    class="font-body text-base text-gray-300 hover:text-white transition-colors"
                  >
                    {child.title}
                  </a>
                </li>
              ))
            ) : (
              <li>
                <a 
                  href={item.url || `/${item.title.toLowerCase().replace(/\s+/g, '-')}`} 
                  class="font-body text-base text-gray-300 hover:text-white transition-colors"
                >
                  {item.title}
                </a>
              </li>
            )}
          </ul>
        </div>
      ))}

    </div>
  </div>

  <!-- Sección inferior con branding y enlaces legales -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-6 py-8">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
        
        <!-- Lado izquierdo: Branding -->
        <div class="space-y-1">
          <Heading level={3} className="text-amber-400 font-bold">Travel with Gastón</Heading>
          <Text size="sm" className="text-gray-400">Powered by Little Emperors</Text>
        </div>

        <!-- Lado derecho: Enlaces legales -->
        <div class="flex space-x-6">
          <a href="#" class="font-body text-sm text-gray-300 hover:text-white transition-colors">Terms and conditions</a>
          <a href="#" class="font-body text-sm text-gray-300 hover:text-white transition-colors">Privacy policy</a>
        </div>

      </div>
    </div>
  </div>
</footer> 